                </MultiBinding>
            </Button.Height>
            <Button.Width>
                <MultiBinding Converter="{StaticResource Button3WidthConverter}">
                    <Binding Path="ScreenHeight" RelativeSource="{RelativeSource AncestorType=Window}"/>
                    <Binding Path="Button3Mode" Source="{x:Static local:PositionSettings.Current}"/>
                    <Binding Path="Buttons1To3Scale" Source="{x:Static local:PositionSettings.Current}"/>
                </MultiBinding>
            </Button.Width>
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Setter Property="Background">
                        <Setter.Value>
                            <ImageBrush Stretch="UniformToFill">
                                <ImageBrush.ImageSource>
                                    <BitmapImage UriSource="/img/vdt/B1.png"/>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Value="2">
                            <DataTrigger.Binding>
                                <Binding Path="Button3Mode" Source="{x:Static local:PositionSettings.Current}"/>
                            </DataTrigger.Binding>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush Stretch="UniformToFill">
                                        <ImageBrush.ImageSource>
                                            <BitmapImage UriSource="/img/vdt/B2.png"/>
                                        </ImageBrush.ImageSource>
                                    </ImageBrush>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Value="0">
                            <DataTrigger.Binding>
                                <Binding Path="Button3Mode" Source="{x:Static local:PositionSettings.Current}"/>
                            </DataTrigger.Binding>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush Stretch="UniformToFill">
                                        <ImageBrush.ImageSource>
                                            <BitmapImage UriSource="/img/vdt/B3.png"/>
                                        </ImageBrush.ImageSource>
                                    </ImageBrush>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <!-- Left：mode=1 贴右；mode=2 贴左；mode=0 自由 -->
            <Canvas.Left>
                <MultiBinding Converter="{StaticResource Button3LeftByModeConverter}">
                    <Binding Path="ScreenWidth" RelativeSource="{RelativeSource AncestorType=Window}"/>
                    <Binding Path="ScreenHeight" RelativeSource="{RelativeSource AncestorType=Window}"/>
                    <Binding Path="Button3Mode" Source="{x:Static local:PositionSettings.Current}"/>
                    <Binding Path="Button3LeftRatio_Free" Source="{x:Static local:PositionSettings.Current}"/>
                    <Binding Path="Buttons1To3Scale" Source="{x:Static local:PositionSettings.Current}"/>
                </MultiBinding>
            </Canvas.Left>
            <!-- Top：mode=0 用 Button3TopRatio_Free；否则用 Button3TopRatio_Edge -->
            <Canvas.Top>
                <MultiBinding Converter="{StaticResource Button3TopByModeConverter}">
                    <Binding Path="ScreenWidth" RelativeSource="{RelativeSource AncestorType=Window}"/>
                    <Binding Path="ScreenHeight" RelativeSource="{RelativeSource AncestorType=Window}"/>
                    <Binding Path="Button3Mode" Source="{x:Static local:PositionSettings.Current}"/>
                    <Binding Path="Button3TopRatio_LeftEdge" Source="{x:Static local:PositionSettings.Current}"/>
                    <Binding Path="Button3TopRatio_RightEdge" Source="{x:Static local:PositionSettings.Current}"/>
                    <Binding Path="Button3TopRatio_Free" Source="{x:Static local:PositionSettings.Current}"/>
                    <Binding Path="Buttons1To3Scale" Source="{x:Static local:PositionSettings.Current}"/>
                </MultiBinding>
            </Canvas.Top>
        </Button>

