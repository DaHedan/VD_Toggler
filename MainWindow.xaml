                    </ImageBrush.ImageSource>
                </ImageBrush>
            </Button.Background>
            <Canvas.Left>
                <MultiBinding Converter="{StaticResource LeftByWidthMultiConverter}">
                    <Binding Path="ScreenWidth" RelativeSource="{RelativeSource AncestorType=Window}"/>
