                </MultiBinding>
            </Button.Width>
            <Button.Height>
                <MultiBinding Converter="{StaticResource ButtonSizeScaledConverter}" ConverterParameter="20">
                    <Binding Path="ScreenHeight" RelativeSource="{RelativeSource AncestorType=Window}"/>
                    <Binding Path="Buttons4To9Scale" Source="{x:Static local:PositionSettings.Current}"/>
                </MultiBinding>
            </Button.Height>
            <Button.Background>
