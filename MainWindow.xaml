        <Button x:Name="Button7"
                Opacity="{Binding Path=Buttons4To9Opacity, Source={x:Static local:PositionSettings.Current}}"
                Content=""
                IsHitTestVisible="True"
                Visibility="Collapsed"
                Click="HandleButton7Click">
            <Button.Width>
